@model Faculty
@{
    ViewData["Title"] = "Update";
}

<h2>Edit</h2>

<form asp-action="Update" asp-controller="CRUD" method="post">
    <div class="form-group">
        <label asp-for="FacultyID">ID:</label>&emsp;
        <span><b>@Model.FacultyID</b></span>
        <input type="hidden" asp-for="FacultyID" />
    </div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <div><span asp-validation-for="Email" class="text-danger"></span></div>
        <input asp-for="Email" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone number</label>
        <div><span asp-validation-for="Phone" class="text-danger"></span></div>
        <input asp-for="Phone" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Notes">Notes</label>
        <textarea asp-for="Notes" type="text" class="form-control"></textarea>
    </div>
    <div class="text-center">
        <button type="submit" class="btn-save btn-design">Save</button>
        <a asp-action="Faculty" asp-controller="Faculty" class="btn-save btn-secondary">Cancel</a>
    </div>
</form>
@Html.Partial("MandatoryField")

